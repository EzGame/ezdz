<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title -%></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', [:edit, post] %></td>
        <td><%= link_to 'Destroy', post, method: :destroy, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', [:new, :blog] -%><br/>
<%= link_to 'New Album', [:new, :album] -%>
