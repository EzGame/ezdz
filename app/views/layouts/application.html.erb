<!DOCTYPE html>
<html>
<head>
  <title>Ezdz</title>
  <meta name="viewport"
        content="width=device-width, initial-scale=1.0, user-scalable=no"/>
  <%= csrf_meta_tags %>

  <!-- CSS -->
  <%= stylesheet_link_tag    "#{params[:controller]}" -%>
  <%= stylesheet_link_tag    'application', 'data-turbolinks-track' => true -%>

  <!-- JS -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true -%>
  <%= javascript_include_tag "velocity" -%>
  <%= javascript_include_tag "#{params[:controller]}" -%>

  <%= yield :application_head -%>

</head>
<body>
<div id="app-intro">
  <%= image_tag 'loading' -%>
</div>
<!-- TODO: Animated bg -->
<div id="app-bg">
  <div id="app-main">
    <div id="app-sidebar">
      <div id="app-sidebar-container">
        <ul id="app-menu">
          <li class="selected">Home</li>
          <li>Studio</li>
          <li>Gallery</li>
          <li>Scribbles</li>
        </ul>
      </div>
    </div>
    <div id="app-body">
      <!-- TODO: Use ajax to populate body -->
      <%= yield :application_body -%>
      <!--<div id="test"></div>-->
    </div>
  </div>
</div>
</body>
</html>
