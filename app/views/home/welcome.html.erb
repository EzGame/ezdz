<html>
  <head>
    <%= render template: 'templates/_meta' -%>
    <link rel="import" href="/web/components.html">
    <style>
      html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        padding: 0;
      }

      #container {
        background: #f7f7f7;
        border-top: 1px solid #ccc;
        display: block;
        height: 100%;
        left: 0px;
        overflow: scroll;
        padding: 5px;
        position: relative;
        right: 0px;
      }

      ez-isotope {
        height: 27px;
        width: 700px;
        margin: 63px auto 0 auto;
      }

      ez-logo {
        left: 10px;
        position: fixed;
        top: 5px;
        z-index: 1000;
      }

      ez-post-preview {
        width: 700px;
        height: 300px;
        margin: 0 auto 10px auto;
      }
    </style>
  </head>
  <body>
    <ez-server></ez-server>
    <ez-isotope target='#container' selector='type'></ez-isotope>
    <ez-logo></ez-logo>
    <div id="container"></div>
  </body>
  <script>
    var body = document.querySelector("body");
    var server = document.querySelector("ez-server");
    var isotope = document.querySelector("ez-isotope");
    var container = document.querySelector("#container");

    server.index().then(function(response) {
      var data = response.data

      /* Append response */
      for (var i = 0; i < data.length; i++) {
        var post = document.createElement("ez-post-preview");
        post.load(data[i]);
        container.appendChild(post);
      }

      /* Set click callback - Deprecated */
      // $('ez-post-preview').on('click', function(e) {
      //   e.preventDefault();
      //   server.get('/p/' + this.id).then(function(results) {
      //     var popup = new ez.EzPopupElement();
      //     popup.html = results;
      //     body.appendChild(popup);
      //   });
      // });
    });

    isotope.load({
      "Blog":"on",
      "Deck":"on",
      "Photography":"on",
      "Writing":"on"
    });
  </script>
</html>
